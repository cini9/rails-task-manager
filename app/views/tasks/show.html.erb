
<div class="container">
  <div class="title d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task), class: "btn btn-light" do %>
      <span class="glyphicon glyphicon-pencil"></span>  Edit this task
    <% end %>
  </div>
  <div class="details">
    <p><%= @task.details %></p>
  </div>

  <p class="mt-3">This task is <%= @task.completed ? "completed" : "not yet completed" %></p>
  <%= link_to "Back to list", tasks_path  %>
</div>
