
<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="field d-flex align-items-center mb-3">
    <%= f.check_box :completed %>
    <%= f.label "Completed", class: "my-0 mx-3" %>
  </div>
  <%= f.submit class: 'btn btn-primary mb-3' %>
<% end %>

